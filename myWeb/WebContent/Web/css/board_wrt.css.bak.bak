#sub_img{
	width:971px; height:179px;
	background-image:url(../images/sub_back.png);
	background-repeat:no-repeat;
	background-position:left top;
}

#sub_menu{
	width:238px; float:left; margin:20px;
	font-family:Verdana, Geneva, sans-serif;
	font-size:1em;
}
#sub_menu ul{
	margin:20px 0 0 10px; list-style:none;
}
#sub_menu a{
	text-decoration:none; color:#666; display:block;
	height:15px; width:150px; padding:7px;
	border-bottom-width: 1px;
	border-bottom-style: dotted;
	border-bottom-color:#999;
	background-image: url(../images/bullet.gif);
	background-repeat:no-repeat;
	background-position:right center;
}
#sub_menu a:hover{
	background-image:url(../images/bullet_orange.gif);
	background-repeat:no-repeat;
	background-position:right center;
	color:#F90;
}
.clear {
	clear:both;
}
/*─────article ─────────────────────────────────────────────────────────────────────────────────────────*/

article table#board{
	width:670px; border-collapse:collapse;
}
article table#board th{
	text-align:center;
	height:20px;                               /* 전체 높이를 지정 */
	text-transform:capitalize;                 /* 영문 첫글자를 대문자로 */
	font-size: 14px;                           /* 글꼴 사이즈 지정 */
	font-family: sans-serif, "맑은 고딕", "돋움";  /* 글꼴 모양 지정 */
	font-weight:bold;                          /* 글꼴 두께 지정 */
	padding:5px;                     /* 글꼴과 전체 셀과의 간격 미세 조정 */
	background-repeat:repeat-x;
	background-position:center center;
	background-image:url(../images/t_back.jpg); /* 배경 지정 */
	color:#FFF;                                 /* 글꼴 색 지정 */
	border-radius:5px 5px;
	
}

#box{width:670px;height:auto;float:right;margin-top:20px;line-height:2;font-size:13px;}
.label{width:70px;float:left;padding-right:10px;text-align:right;}
.text_area{width:400px;height:200px;resize:none;overflow:scroll; overflow-x:hidden;}

.label > .btn{margin-left:20px}

article .board_btn{width:210px;margin:10px 190px;}
article .btn{
	padding:2px;
	margin: 0 30px 10px 5px;
	width:70px; height:23px;
	border-radius:10px;
	border:1px solid #999;
	color:#FFF; 
	background-image:url(../images/t_back.jpg);
	background-repeat:repeat-x;
	background-position:center center;
	float:right;
}
