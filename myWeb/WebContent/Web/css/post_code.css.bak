@charset "utf-8"

body{margin:0; padding:0;}

body{color:#333;font-size:0.75em;background-color:#858585;line-height:1.2em;}
#warp{
	width:971px; /*각 웹페이지의 크기에 맞게 사이즈 조정*/
	text-align:left; margin:0;
	margin-right:auto; margin-left: auto;
	margin-right:auto; margin-left: auto;
	background-image:url(../images/shadow.png);
	background-repeat:repeat-y;
	min-height:780px;
}

#logo{
	float:left; width;265px; margin:60px 0 0 40px;
}


header{
	height:151px;
}
.clear {
	clear:both;
}

nav#top_menu{
	width:600px;
	margin:50px 20px 0 0;
	float:right;
}
nav#top_menu ul{
	list-style:none;
	font-family:Verdana, Geneva, sans-serif;
	font-size:13px; font-weight:100; color:#333;
}
nav#top_menu ul li{
	float:left; margin:0 5px;
}

nav#top_menu a{
	display:block; height:20px; padding:10px; text-decoration:none; color:#333;
}

nav#top_menu a:hover{
	background-image:url(../images/blue.gif);
	background-repeat:repeat-x;
	background-position:bottom;
}
#login{
	float:right; margin:20px 64px 0 0; font-family:Arial, Helvetica, sans-serif;
	font-size:12px; word-spacing:5px;
}
#login a{
	text-decoration:none; color:#333;
}
#login a:hover{
	color:#F90;
}
#login{
	float:right; margin:20px 64px 0 0; font-family:Arial, Helvetica, sans-serif;
	font-size:12px; word-spacing:5px;
}
#login a{
	text-decoration:none; color:#333;
}
#login a:hover{
	color:#F90;
}
#sub_img{
	width:971px; height:179px;
	background-image:url(../images/sub_back.png);
	background-repeat:no-repeat;
	background-position:left top;
}

#sub_menu{
	width:238px; float:left; margin:20px;
	font-family:Verdana, Geneva, sans-serif;
	font-size:1em;
}
#sub_menu ul{
	margin:20px 0 0 10px; list-style:none;
}
#sub_menu a{
	text-decoration:none; color:#666; display:block;
	height:15px; width:150px; padding:7px;
	border-bottom-width: 1px;
	border-bottom-style: dotted;
	border-bottom-color:#999;
	background-image: url(../images/bullet.gif);
	background-repeat:no-repeat;
	background-position:right center;
}
#sub_menu a:hover{
	background-image:url(../images/bullet_orange.gif);
	background-repeat:no-repeat;
	background-position:right center;
	color:#F90;
}
.clear {
	clear:both;
}
/*─────article ─────────────────────────────────────────────────────────────────────────────────────────*/
#contents{width:670px;float:right}
#post_code_wrap{width:420px;height:auto;margin:20px 50px;}
.close{text-align:center;margin-top:20px;}

article .btn{
	padding:2px;
	margin: 0 30px 10px 5px;
	width:70px; height:23px;
	border-radius:10px;
	border:1px solid #999;
	color:#FFF; 
	background-image:url(../images/t_back.jpg);
	background-repeat:repeat-x;
	background-position:center center;
	float:right;
}

/*──────────────────────────────────────────────────────────────────────────────────────────────────────*/


footer{
	margin:50px 0 0 0; height:80px;
	background-image:url(../images/under_logo.png);
	background-repeat:no-repeat;
	background-position:40px center;
}
footer hr{
	width:900px; margin:0 0 0 35px;
}
footer #copy{
	font-family:Verdana, Geneva, sans-serif;
	width:450px; margin:20px 0 0 190px; float:left;
}
footer #social{
	width:130px; margin:20px 20px 0 0; float:right;
}
footer #social img{
	margin:0 7px;
}
